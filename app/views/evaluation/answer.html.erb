<div id="title_bar"> 
  <h2 id="page_title">Respostas para a dimensão <%= @dimension.number %></h2> <%=@dimension.name%>
  <div class="action_items">
    Olá <strong><%= "#{@name}"%></strong><br>Segmento: <strong><%= "#{@segment.name}"%></strong>, Instituição: <strong><%= "#{@school.name}"%></strong>
  </div> 
</div> 
<div class="with_sidebar" id="content"> 
  <div id="main_content_wrapper"> 
    <div id="main_content"> 
      <div class="panel dashboard_section"> 
      <h3>Responda cada uma das questões abaixo</h3>
      <div class="panel_contents">
      <% form_tag "/review", :id => "answers", :multipart => true, :method => 'POST' do  %>
        <table>
          <% current_indicator = -1%>
          <% @questions.each do |question| %>
            <% if question.question.indicator.number != current_indicator %>
              <% current_indicator = question.question.indicator.number%>
              <tr>
                <td class="indicador" colspan="9">Indicador <%= "#{@dimension.number}.#{question.question.indicator.number} - #{question.question.indicator.name}" %></td>
              </tr>
            <% end %>
            <tr>
              <td rowspan="2"><%= "#{@dimension.number}.#{question.question.indicator.number}.#{question.question.number}" %></td>
              <td colspan="8"><%= "#{question.text}" %></td>
            </tr>
            <tr>
            <td>Não sabe<%= text_field_tag "do_not_know[#{question.id}]", !question.answer.nil? ? question.answer.do_not_know : "", :size => 2 %></td>
              <td>1 <%= text_field_tag "one[#{question.id}]", !question.answer.nil? ? question.answer.one : "", :size => 2 %></td>
              <td>2 <%= text_field_tag "two[#{question.id}]", !question.answer.nil? ? question.answer.two : "", :size => 2 %></td>
              <td>3 <%= text_field_tag "three[#{question.id}]", !question.answer.nil? ? question.answer.three : "", :size => 2 %></td>
              <td>4 <%= text_field_tag "four[#{question.id}]", !question.answer.nil? ? question.answer.four : "", :size => 2 %></td>
              <td>5 <%= text_field_tag "five[#{question.id}]", !question.answer.nil? ? question.answer.five : "", :size => 2 %></td>
              <td>Não respondeu <%= text_field_tag "do_not_answer[#{question.id}]", !question.answer.nil? ? question.answer.do_not_answer : "", :size => 2 %></td>
              <td>Quantidade de pessoas <%= text_field_tag "quantity_of_people[#{question.id}]", !question.answer.nil? ? question.answer.quantity_of_people : "", :size => 2 %></td>
            </tr>
          <% end %>
          <tr>
            <td>Práticas consolidadas</td>
            <td colspan="8">
              <%= text_area_tag :consolidated_practices, !@practices.nil? ? !@practices.consolidated.nil? ? @practices.consolidated : "" : "", :cols => 120, :rows => 5%>
            </td>
          </tr>
          <tr>
            <td>Práticas que precisam avançar</td>
            <td colspan="8">
              <%= text_area_tag :to_be_improved_practices, !@practices.nil? ? !@practices.to_be_improved.nil? ? @practices.to_be_improved : "" : "", :cols => 120, :rows => 5%>
            </td>
          </tr>
        </table>
            <%= hidden_field_tag :school, @school.id %>
            <%= hidden_field_tag :service_level, @service_level.id %>
            <%= hidden_field_tag :segment, @segment.id %>
            <%= hidden_field_tag :name, @name %>
            <%= hidden_field_tag :dimension, @dimension.number %>
            <%= submit_tag 'revisar' %>
        <% end %>
      </div> 
    </div> 
  </div> 
  </div> 
  <div id="sidebar">
    <%= render :partial => "flow/steps", :locals => {:current_step => @dimension.number + 3} %>
  </div>
</div> 
<div id="footer"> 
</div> 

<script type="text/javascript" charset="utf-8"> 
  $(document).ready(function() {
    var f1 = new LiveValidation('quantity_of_people');
    f1.add( Validate.Presence);
  });
</script> 
