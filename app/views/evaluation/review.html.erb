<div id="title_bar"> 
  <h2 id="page_title">Respostas para a dimensão <%= @dimension.number %></h2> <%=@dimension.name%>
  <div class="action_items">
    Olá <strong><%= "#{@name}"%></strong><br>Segmento: <strong><%= "#{@segment.name}"%></strong>, Instituição: <strong><%= "#{@school.name}"%></strong>
  </div> 
</div> 
<div class="with_sidebar" id="content"> 
  <div id="main_content_wrapper"> 
    <div id="main_content"> 
      <div class="panel dashboard_section"> 
      <h3>Responda cada uma das questões abaixo</h3>
      <div class="panel_contents">
        <% form_tag "/checkreview", :id => "answers" do  %>
        <table>
          <% current_indicator = -1%>
          <% @questions.each do |question| %>
            <% if question.question.indicator.number != current_indicator %>
              <% current_indicator = question.question.indicator.number%>
              <tr>
                <td class="indicador" colspan="9">Indicador <%= "#{@dimension.number}.#{question.question.indicator.number} - #{question.question.indicator.name}" %></td>
              </tr>
            <% end %>
            <tr>
              <td rowspan="2"><%= "#{@dimension.number}.#{question.question.indicator.number}.#{question.question.number}" %></td>
              <td colspan="8"><%= "#{question.text}" %></td>
            </tr>
            <tr>
            <td>Não sabe - <strong><%= !question.answer.nil? ? question.answer.do_not_know : "N/R"%></strong></td>
              <td>1 - <strong><%= !question.answer.nil? ? !question.answer.one.nil? ? question.answer.one : "N/R" : "N/R"%></strong></td>
              <td>2 - <strong><%= !question.answer.nil? ? !question.answer.two.nil? ? question.answer.two : "N/R" : "N/R"%></strong></td>
              <td>3 - <strong><%= !question.answer.nil? ? !question.answer.three.nil? ? question.answer.three : "N/R" : "N/R"%></strong></td>
              <td>4 - <strong><%= !question.answer.nil? ? !question.answer.four.nil? ? question.answer.four : "N/R" : "N/R"%></strong></td>
              <td>5 - <strong><%= !question.answer.nil? ? !question.answer.five ? question.answer.five : "N/R" : "N/R"%></strong></td>
              <td>Não respondeu - <strong><%= !question.answer.nil? ? !question.answer.do_not_answer.nil? ? question.answer.do_not_answer : "N/R" : "N/R"%></strong></td>
                <td>Quantidade de pessoas - <strong><%= !question.answer.nil? ? !question.answer.quantity_of_people.nil? ? question.answer.quantity_of_people : "N/R" : "N/R"%></strong></td>
            </tr>
          <% end %>
          <tr>
            <td>Práticas consolidadas</td>
            <td colspan="8">
              <strong><%= !@practice.nil? ? !@practice.consolidated.nil? ? @practice.consolidated : "N/R" : "N/R"%></strong>
            </td>
          </tr>
          <tr>
            <td>Práticas que precisam avançar</td>
            <td colspan="8">
              <strong><%= !@practice.nil? ? !@practice.to_be_improved.nil? ? @practice.to_be_improved : "N/R" : "N/R"%></strong>
            </td>
          </tr>
        </table>
            <%= hidden_field_tag :school, @school.id %>
            <%= hidden_field_tag :service_level, @service_level.id %>
            <%= hidden_field_tag :segment, @segment.id %>
            <%= hidden_field_tag :name, @name %>
            <%= hidden_field_tag :dimension, @dimension.number %>
            <%= submit_tag 'modificar' %>
            <%= submit_tag 'salvar' %>
        <% end %>
      </div> 
    </div> 
  </div> 
  </div> 
  <div id="sidebar">
    <%= render :partial => "flow/steps", :locals => {:current_step => @dimension.number + 3} %>
  </div>
</div> 
<div id="footer"> 
</div> 

<script type="text/javascript" charset="utf-8"> 
  $(document).ready(function() {
    var f1 = new LiveValidation('quantity_of_people');
    f1.add( Validate.Presence);
  });
</script> 
