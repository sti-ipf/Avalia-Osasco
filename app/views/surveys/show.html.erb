<% content_for :institution do %>
 <%= "#{@institution_name} - #{@subtitle}" %>
 <% if @user %>
 <%= link_to "Sair", '/2010/session/destroy', :method => 'delete' %>
 <% end %> 
<% end %>
<% form_for :answer, :url => save_answer_survey_path(@survey) do |f| %>
  <%= f.error_messages %>
      <table class="answer">
      <tr><td colspan=8 style='padding: 3px; font-weight: bold; font-size: 20px; text-align: center;'> Questão <%=h @question.number %></td></tr>
      <tr>	
	<td rowspan=2></td>
        <td style='padding: 3px; font-weight: bold; font-size: 20px; text-align: center;'>0</td>
        <td style='padding: 3px; font-weight: bold; font-size: 20px; text-align: center;'>1</td>
        <td style='padding: 3px; font-weight: bold; font-size: 20px; text-align: center;'>2</td>
        <td style='padding: 3px; font-weight: bold; font-size: 20px; text-align: center;'>3</td>
        <td style='padding: 3px; font-weight: bold; font-size: 20px; text-align: center;'>4</td>
        <td style='padding: 3px; font-weight: bold; font-size: 20px; text-align: center;'>5</td>
      </tr>
      <tr>	
        <td style='padding: 3px; font-weight: bold; font-size: 18px; text-align: center'>não sei</td>
        <td style='padding: 3px; font-weight: bold; font-size: 18px;'>nunca ou péssimo</td>
        <td style='padding: 3px; font-weight: bold; font-size: 18px;'>raramente ou ruim</td>
        <td style='padding: 3px; font-weight: bold; font-size: 18px;'>às vezes ou regular</td>
        <td style='padding: 3px; font-weight: bold; font-size: 18px;'>na maioria das vezes ou bom</td>
        <td style='padding: 3px; font-weight: bold; font-size: 18px;'>sempre ou ótimo</td>
        <td style='padding: 3px; font-weight: bold; font-size: 18px;'>participantes</td>
      </tr>
        <tr>
	  <td style='padding: 3px; font-weight: bold; font-size: 20px;'>Total: </td>
          <td><%= f.text_field :zero, :size => '7', :value => "#{@answer.zero}" %></td>
          <td><%= f.text_field :one, :size => '7', :value => "#{@answer.one}" %></td>
          <td><%= f.text_field :two, :size => '7', :value => "#{@answer.two}"%></td>
          <td><%= f.text_field :three, :size => '7', :value => "#{@answer.three}" %></td>
          <td><%= f.text_field :four, :size => '7', :value => "#{@answer.four}" %></td>
          <td><%= f.text_field :five, :size => '7', :value => "#{@answer.five}" %></td>
          <td><%= f.text_field :participants_number, :size => '7', :value => "#{@answer.participants_number}" %></td>
	  <%= hidden_field :survey, :id %>
	  <%= hidden_field :question, :id, :value => @question.id %>
        </tr>
      </table>
   <center> <%= submit_tag "Salvar e Ir para a próxima questão" %></center>
    <% end %>

<center><%= link_to 'Voltar para a Página Incial', '/2010/session' %></center>
<%= link_to '<<< Questão Anterior', survey_path(@survey, :page => "#{session[:question_page] - 1}") unless session[:question_page] == 0 %>
